generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  employees Employee[]
}

// Faltan mas cosas
model Employee {
  id          Int      @id @default(autoincrement())
  cuit        String
  full_name   String
  position    String
  entryDate   DateTime
  socialWork  String
  antique     Int
  mode        String
  timeWorked  Int
  basicSalary Int
  daysWorked  Int
  highSchool  Boolean  @default(true)
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
}
